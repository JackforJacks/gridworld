{
  "name": "gridworld",
  "version": "1.0.0",
  "description": "GridWorld - Interactive 3D Hexasphere",
  "main": "src/main.js",
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:watch:prod": "webpack --mode production --watch",
    "auto-build": "webpack --mode development --watch --stats minimal",
    "clean": "rimraf dist",
    "start": "npm run dev",
    "server": "node server/index.js",
    "server:watch": "nodemon server/index.js",
    "server:dev": "nodemon server/index.js",
    "full-auto": "concurrently \"npm run auto-build\" \"npm run server:watch\"",
    "full-dev": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "prod": "npm run build && npm run server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.4",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ecsy": "^0.4.3",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "pg": "^8.11.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.164.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/arscan/hexashere.js.git"
  },
  "keywords": [
    "3d",
    "hexasphere",
    "three.js",
    "gridworld"
  ],
  "author": "robscanlon@gmail.com",
  "license": "MIT"
}