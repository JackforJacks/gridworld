{
  "name": "gridworld",
  "version": "1.0.0",
  "description": "GridWorld - Interactive 3D Hexasphere",
  "main": "src/main.js",
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:watch:prod": "webpack --mode production --watch",
    "auto-build": "webpack --mode development --watch --stats minimal",
    "clean": "rimraf dist",
    "start": "npm run dev",
    "server": "node server/index.js",
    "server:watch": "nodemon server/index.js",
    "server:dev": "nodemon server/index.js",
    "full-auto": "concurrently \"npm run dev\" \"npm run server:watch\"",
    "full-dev": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "prod": "npm run build && npm run server",
    "db:init": "node server/migrations/init_database.js",
    "db:reset": "node server/migrations/reset_schema_for_migrations.js && npm run db:init",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand --testPathIgnorePatterns=integration",
    "test:integration": "jest --runInBand --testPathPattern=integration",
    "test:coverage": "jest --coverage --runInBand --testPathIgnorePatterns=integration",
    "test:watch": "jest --watch",
    "test:unit:watch": "jest --watch --testPathIgnorePatterns=integration",
    "test:file": "jest --runInBand",
    "prefull-auto": "npm run test:unit"
  },
  "jest": {
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.4",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ecsy": "^0.4.3",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "ioredis": "^5.9.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.164.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/arscan/hexashere.js.git"
  },
  "keywords": [
    "3d",
    "hexasphere",
    "three.js",
    "gridworld"
  ],
  "author": "robscanlon@gmail.com",
  "license": "MIT"
}
