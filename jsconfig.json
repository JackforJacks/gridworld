{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowJs": true,
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@server/*": [
                "server/*"
            ]
        },
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "src/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}