{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/server",
        "rootDir": "./server",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2020"
        ]
    },
    "include": [
        "server/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.js"
    ]
}