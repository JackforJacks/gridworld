{
    "watch": [
        "server/**/*.ts",
        "package.json"
    ],
    "ext": "ts,json",
    "ignore": [
        "dist/",
        "node_modules/",
        "*.test.ts"
    ],
    "exec": "cross-env NODE_OPTIONS='--max-old-space-size=8192' tsx server/index.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "delay": 1000,
    "verbose": true,
    "restartable": "rs",
    "colours": true,
    "legacyWatch": false
}