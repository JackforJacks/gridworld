{
  "dashboard": {
    "id": null,
    "uid": "integrity-audit",
    "title": "Integrity Audit - GridWorld",
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "source",
          "type": "query",
          "label": "Source",
          "datasource": "Prometheus",
          "query": "label_values(integrity_audit_runs_total, source)",
          "refresh": 1,
          "includeAll": true,
          "multi": false
        }
      ]
    },
    "panels": [
      {
        "type": "stat",
        "title": "Integrity Issues (last run)",
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          { "expr": "integrity_issues_found", "refId": "A", "datasource": "Prometheus" }
        ],
        "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] }
      },
      {
        "type": "timeseries",
        "title": "Audit runs (rate)",
        "id": 2,
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          { "expr": "rate(integrity_audit_runs_total[5m])", "refId": "A", "datasource": "Prometheus" }
        ]
      },
      {
        "type": "timeseries",
        "title": "Audit failures (rate)",
        "id": 3,
        "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 },
        "targets": [
          { "expr": "rate(integrity_audit_failures_total[5m])", "refId": "A", "datasource": "Prometheus" }
        ]
      },
      {
        "type": "timeseries",
        "title": "Audit duration (avg seconds)",
        "id": 4,
        "gridPos": { "x": 6, "y": 4, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(integrity_audit_duration_seconds_sum[5m])) / sum(rate(integrity_audit_duration_seconds_count[5m]))",
            "refId": "A",
            "datasource": "Prometheus"
          }
        ]
      }
    ],
    "annotations": { "list": [] }
  },
  "overwrite": true
}
